<div class="content">
  <img src="./public/icons/cancel.svg" class="modal-close" alt="close" onclick="closeModal()" />
  <div class="title">
    {{loadImageBackdrop images 'backdrop'}}
    {{#if tagline}}
      <h2>"{{tagline}}"</h2>
    {{/if}}
  </div>
  <div class="body">
    <div class="group">
      <h2>{{title}}</h2>
      <div class="labels">
        <img src="./public/icons/star.svg" class="icons" alt="rating" />
        <span>{{vote_average}}</span>
      </div>
      <div class="labels">
        <img src="./public/icons/clock.svg" class="icons" alt="duration" />
        <span>{{duration runtime}}</span>
      </div>
    </div>
    <div class="group">
      <p>{{overview}}</p>
    </div>
    {{#if credits.cast}}
      <div class="group">
        <h3>Cast</h3>
        <span>{{arrToStr credits.cast}}</span>
      </div>
    {{/if}}
    <div class="group">
      <h3>Genres</h3>
      <span>{{arrToStr genres}}</span>
    </div>
  </div>
</div>